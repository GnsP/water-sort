doctype html
html
    head
        title Water sort
        link(rel="stylesheet",href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,500,0,0")
        link(rel="preconnect",href="https://fonts.googleapis.com")
        link(rel="preconnect",href="https://fonts.gstatic.com",crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap",rel="stylesheet")
        link(rel="stylesheet",href="./assets/main.css")
        link(rel="manifest",href="./manifest.json")

    body
        .container
            .levels-container.spaced
                button.outlined#prev-level
                    span.material-symbols-outlined arrow_back_ios
                h2#level-text Level 1
                button.outlined#next-level
                    span.material-symbols-outlined arrow_forward_ios
                button.outlined#new-game
                    span.button-text NEW GAME
            .actions-container.spaced
                button#reset
                    span.material-symbols-outlined restart_alt
                .spacer-xs
                button#undo
                    span.material-symbols-outlined undo
                .spacer
                button#solve
                    span.material-symbols-outlined done
                    span.button-text SOLVE IT!
            .hcenter
                canvas#main(width="320px", height="480px")
            .footer
                p coding games with gnsp

            .modal-overlay#modal-overlay
                .modal#modal
                    h3#modal-heading MODAL HEADING
                    p#modal-text THIS IS A LINE OF TEXT. THIS IS THE NEXT SENTENCE. DO YOU WANT TO CONTINUE ?
                    .modal-actions
                        button#modal-action
                            span.material-symbols-outlined#modal-action-icon done
                            span.button-text#modal-action-text YES
                        button#modal-cancel
                            span.material-symbols-outlined close
                            span.button-text CANCEL
                    
        
        script(type="text/javascript",src="./assets/main.js")